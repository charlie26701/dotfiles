# Kitty
super + Return
    OpenApps --terminal

# Rofi
super + d
    OpenApps --menu

# PowerMenu
alt + F4
    ~/.config/bspwm/scripts/Power/PowerMenu

# Thunar
super + e
    OpenApps --filemanager

# Bluetooth & Wifi
alt + w
    ~/.config/bspwm/scripts/Network/Network
alt + b
    ~/.config/bspwm/scripts/Bluetooth/Bluetooth

# Lockscreen
super + l
    betterlockscreen -l dim

# Screenshot and Record
Print
    ~/.config/bspwm/scripts/Screenshot/Screenshot
super + Print
	flameshot gui
# Show windows
super + Tab
    ~/.config/bspwm/scripts/Windows/Windows

# Manage brightness
XF86MonBrightnessUp
    ~/.config/bspwm/scripts/Volume_Brightness brightness_up
XF86MonBrightnessDown
    ~/.config/bspwm/scripts/Volume_Brightness brightness_down

# Volume control
XF86AudioRaiseVolume
    ~/.config/bspwm/scripts/Volume_Brightness volume_up
XF86AudioLowerVolume
    ~/.config/bspwm/scripts/Volume_Brightness volume_down
XF86AudioMute
    ~/.config/bspwm/scripts/Volume_Brightness volume_mute
# Next Pause Previous
XF86Audio{Play,Next,Prev}
    playerctl {play-pause,next,previous}

# Theme Selector
alt + @space
    RiceSelector

# Poweroff, Reboot, Logout, Lockscreen, Kill
ctrl + super + alt + {p,r,q,l,k}
    {systemctl poweroff, systemctl reboot,bspc quit,physlock -d,xkill}

# Hide/Show Bar (Polybar and/or eww)
super + {h,u}
    HideBar {-h,-u}

# Random wallpaper
super + alt + w
    feh -z --no-fehbg --bg-fill ~/.config/bspwm/rices/$RICETHEME/walls/

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
    bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
    bspc node -{k,c}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# set the window state
super + {shift + f,shift + t,shift + @space,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
uper + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
